// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vote {
  id            Int      @id @default(autoincrement())
  candidateName String
  nullifierHash String   @unique
  createdAt     DateTime @default(now())
}

model Party {
  id          Int          @id @default(autoincrement())
  description String
  title       String       @unique
  emoji       String
  ctaText     String
  ctaLink     String
  content     String
  politicians Politician[]
}

model Politician {
  id                     Int         @id @default(autoincrement())
  name                   String
  age                    Int
  sex                    String
  partyId                Int
  party                  Party        @relation(fields: [partyId], references: [id])
  presidentCandidates    Candidate[]  @relation("PresidentCandidates")
  vicePresidentCandidates Candidate[] @relation("VicePresidentCandidates")
}

model Candidate {
  id              Int        @id @default(autoincrement())
  presidentId     Int
  vicePresidentId Int
  president       Politician @relation("PresidentCandidates", fields: [presidentId], references: [id])
  vicePresident   Politician @relation("VicePresidentCandidates", fields: [vicePresidentId], references: [id])
}

model ElectionInfo {
  id          Int     @id @default(autoincrement())
  title       String
  description String
}
